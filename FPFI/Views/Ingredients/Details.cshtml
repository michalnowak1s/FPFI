@model FPFI.Models.Ingredient

@{
    ViewBag.Title = "Details";
}
<div class="container col-3 bg-white ">
    <br />
    <h2>Szczegóły:</h2>

    <div>
        <dl class="dl-horizontal">

            <dt>
                Nazwa
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                Rodzaj
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Type)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Nutriscore)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nutriscore)
            </dd>

            <dt>
                Zdatność
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Endurance)
            </dd>

            <dt>
                Alergen
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Allergen)
            </dd>

            <dt>
                Jednostka
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Unit.Name)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Edytuj", "Edit", new { id = Model.IngredientID }) |
        @Html.ActionLink("Powrót do listy", "Index")
    </p>
    <br />
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

